<!DOCTYPE html>
<head>
<title>Todo App</title>
<link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<style>
    .material-symbols-outlined {
      font-variation-settings:
      'FILL' 0,
      'wght' 400,
      'GRAD' 0,
      'opsz' 48
    }
    </style>
</head>
<body>
<div class="todo-container">
    <div>
        <a href="/logout" style="float: left;margin-left: -80%;"> <span class="material-symbols-outlined">
            logout
        </span>
        </a>
        <h2>To-Do List</h2>
    </div>

<div class="todo">
<form action="/home/<%=userID%>" method="POST" class="todo-header">
<input type="text" name="content">
<button type="submit"><span class="fas fa-plus"></span></button>

</form>
<ul class="todo-list">
<% for(let i=0;i<todoTasks.length;i++){ %>
<li class="todo-list-item">
<div class="todo-list-item-name"><%= todoTasks[i].content %></div>
<a href="/edit/<%=userID%>/<%= todoTasks[i]._id %>" class="edit">
<span class="fas fa-edit"></span>
</a>
<a href="/remove/<%=userID%>/<%= todoTasks[i]._id %>" class="remove">
<span class="fas fa-times"></span>
</a>
</li>
<% } %>
</ul>
</div>
</div>
</body>